<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="border rounded border-dark shadow container py-3">
                <form action="/kontak?_method=PUT" method="post" >
                  <input type="hidden" name="oldNama" value="<%= (data.oldNama) ? data.oldNama : data.nama %>">
                  <input type="hidden" name="_id" value="<%= data.id %>" >
                    <% if(typeof errors != "undefined") { %>
                      <div class="alert alert-danger pb-0 pt-2 px-0" role="alert">
                        <ul>
                          <% for(error of errors) { %>
                          <li><%= error.msg %></li>
                          <% } %>
                        </ul>
                      </div>
                    <% } %>
                    <div>
                      <label for="nama" class="form-label">Nama</label>
                      <input type="text" value="<%= data.nama %>" required name="nama" class="form-control" id="nama">
                    </div>
                    <div>
                      <label for="nomor" class="form-label">Nomor</label>
                      <input type="number" value="<%= data.nomor %>" required name="nomor" class="form-control" id="nomor">
                    </div>
                    <div>
                      <label for="email" class="form-label">Email <small>(Opsional)</small></label>
                      <input type="email"value="<%= data.email %>"  required name="email" class="form-control" id="email">
                    </div>
                    <button type="submit" class="mt-3 btn btn-primary">Update</button>
                  </form>
            </div>
        </div>  
    </div>
</div>